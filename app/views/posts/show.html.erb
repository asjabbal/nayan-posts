<div class="row m-3">
  <div class="col-lg-12 mb-3">
    <%= link_to '< Back', posts_path %>
  </div>
  <div class="col-lg-12 mb-2">
    <h4><%= @post.title %></h4>
  </div>
  <div class="col-lg-12 mb-2">
    <%= image_tag(@post.image_url, style: "height: 200px; width: 200px;")%>
  </div>
  <div class="col-lg-12 mb-2">
    <%= @post.content_html.html_safe %>
  </div>
  <div class="col-lg-12 mb-2">
    <strong>Author:</strong>
    <%= @post.author_name %>
  </div>
  <div class="col-lg-12">
    <strong>Tags:</strong>
    <%= @post.tags.pluck(:name).join(", ") %>
  </div>
</div>
